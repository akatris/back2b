<h1 class="text-center">Créer un compte dans le PCOP</h1>
<%= form_for @pcop_form, url: pcops_path do |f| %>

  <%= render partial: 'shared/error_messages', locals: { model: @pcop_form } %>

  <div class="form-group">
    <%= f.label :id %>
    <%= f.text_field :id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :eligible_transactions %>
    <%= f.text_area :eligible_transactions, class: 'form-control' %>
    <small class="form-text">
      <b><span class="badge badge-warning">NOTE:</span></b>
      Les opérations éligibles sont seulement enregistrées dans les rubriques
      (ayant un identifiant à 4 chiffres).
    </small>
  </div>

  <%= f.submit 'Créer ce compte', class: 'btn btn-primary' %>
<% end %>
