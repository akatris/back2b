<h1>user lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>username</th>
      <th>role</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to 'detail', user_path(user) %> |
          <%= link_to 'edit', '#' %>
          <% if admin? && !own_account?(user) %>
           |
            <%= link_to 'delete', user_path(user), method: :delete %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
