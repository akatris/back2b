<h1>Log in</h1>

<%= form_for :session do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: 'form-control' %>
  </div>

  <%= f.submit 'Log in', class: 'btn btn-primary' %>
<% end %>
