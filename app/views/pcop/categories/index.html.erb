<h1 class="text-center">Plan comptable des operations publiques (PCOP) 2006</h1>
<div class="row">
  <div class="col">

    <ul>
      <% @categories.each do |pcop_category| %>
      <li class="pcop_class">
        <%= pcop_category.id %>. <%= link_to pcop_category.name, pcop_category_path(pcop_category.id) %>
        | <%= link_to icon('fa', 'plus'), new_pcop_category_account_url(pcop_category), class: 'text-secondary' %>
        | <%= link_to icon('fa', 'edit'), '#', class: 'text-secondary' %>
        | <%= link_to icon('fa', 'trash'), '#', class: 'text-secondary' %>
        <ul>
          <% pcop_category.accounts.all.each do |pcop_account| %>
            <li>
                <%= pcop_account.id %>.
                <%= link_to pcop_account.name, pcop_category_account_url(pcop_category, pcop_account) %>
                | <%= link_to icon('fa', 'plus'), '#', class: 'text-secondary' %>
                | <%= link_to icon('fa', 'edit'), '#', class: 'text-secondary' %>
                | <%= link_to icon('fa', 'trash'), '#', class: 'text-secondary' %>
                <ul>
                  <% pcop_account.sub_accounts.all.each do |pcop_sub_account| %>
                  <li>
                    <%= pcop_sub_account.id %>.
                    <%= pcop_sub_account.name %>
                    | <%= link_to icon('fa', 'plus'), '#', class: 'text-secondary' %>
                    | <%= link_to icon('fa', 'edit'), '#', class: 'text-secondary' %>
                    | <%= link_to icon('fa', 'trash'), '#', class: 'text-secondary' %>
                  </li>
                  <% end %>
                </ul>
            </li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <%= link_to 'CrÃ©er une classe', new_pcop_category_path, class: 'btn btn-success' %>

  </div>
</div>
