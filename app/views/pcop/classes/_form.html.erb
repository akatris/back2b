<%= form_for @class do |f| %>
  <% if @class.errors.any? %>
    <div class="error_messages alert alert-danger">
      <b>Form contains error:</b>
      <ul class="error_detail">
        <% @class.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :id %>
    <%= f.number_field :id, class: 'form-control' %>
    <small class="form-text"><b>NOTE:</b> Should contain only one number.</small>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= f.submit 'Create', class: 'btn btn-primary' %>
<% end %>
